



<!DOCTYPE web-app PUBLIC
    "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>User Access Management</display-name>

    <!-- SignUpServlet Configuration -->
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>com.example.servlets.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <!-- LoginServlet Configuration -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- SoftwareServlet Configuration -->
    <servlet>
        <servlet-name>SoftwareServlet</servlet-name>
        <servlet-class>com.example.servlets.SoftwareServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SoftwareServlet</servlet-name>
        <url-pattern>/addSoftware</url-pattern>
    </servlet-mapping>

    <!-- RequestServlet Configuration -->
    <servlet>
        <servlet-name>RequestServlet</servlet-name>
        <servlet-class>com.example.servlets.RequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestServlet</servlet-name>
        <url-pattern>/requestAccess</url-pattern>
    </servlet-mapping>

    <!-- ApprovalServlet Configuration -->
    <servlet>
        <servlet-name>ApprovalServlet</servlet-name>
        <servlet-class>com.example.servlets.ApprovalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApprovalServlet</servlet-name>
        <url-pattern>/approveRequest</url-pattern>
    </servlet-mapping>

    <!-- Welcome file configuration -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
